<Window x:Class="finance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:finance"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Доходы">
                <StackPanel>
                    <DataGrid ItemsSource="{Binding Incomes}" AutoGenerateColumns = "False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat={} {0:dd.MM.yyyy}}"/>
                            <DataGridTextColumn Header="Сумма" Binding="{Binding Amount}" />
                            <DataGridComboBoxColumn Header="Источник" SelectedItemBinding="{Binding Source}" ItemsSource="{Binding IncomeSources}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Добавить расход" Click="AddIncome_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 0 0 0"/>
                </StackPanel>
        
            </TabItem>
            <TabItem Header="Расходы">
                <StackPanel>
                    <DataGrid ItemsSource="{Binding Expenses}" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat={} {0:dd.MM.yyyy}}"/>
                            <DataGridTextColumn Header="Сумка" Binding="{Binding Amount}"/>
                            <DataGridComboBoxColumn Header="Категория" SelectedItemBinding="{Binding Category}" ItemsSource="{Binding ExpenseCategories}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Добавить расход" Click="AddExpence_Click"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Финансы">
                <StackPanel>
                    <TextBlock Text="{Binding Balance, StringFormat='Текущий баланс: {0}'}" />
                    <TextBlock Text="{Binding MainIncomeSource, StringFormat='Основной источник дохода: {0}'}"/>
                    <TextBlock Text="{Binding MostExpensiveCategory, StringFormat='Самая затратная категория: {0}'}"/>
                    <StackPanel Orientation="Horizontal">
                        <DatePicker SelectedDate="{Binding StartDate}"/>
                        <DatePicker  SelectedDate="{Binding EndDate}"/>
                        <Button Content="Рассчитать" Click="CalculateSum_Click"/>
                    </StackPanel>
                    <TextBlock Text="{Binding PeriodSummary, StringFormat='Сумма доходов {0:C}, расходов: {1:C}, разница: {2:C}'}"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
